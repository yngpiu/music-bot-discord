# =====================================================================
# Environment Variables - Music Bot
# =====================================================================
# Copy this file to .env and fill in the values
# cp .env.example .env
# =====================================================================

# ----- PostgreSQL -----
DB_USER=discordbot
DB_PASSWORD=strong_password_here
DB_NAME=discord_db
# Local development (docker-compose maps 5433:5432):
#   DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@localhost:5433/${DB_NAME}
# Docker production (container hostname):
DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@postgres:5432/${DB_NAME}

# ----- Redis -----
REDIS_PASSWORD=strong_redis_password_here
# Local development:
#   REDIS_URL=redis://default:${REDIS_PASSWORD}@localhost:6380
# Docker production (container hostname):
REDIS_URL=redis://default:${REDIS_PASSWORD}@redis:6379

# ----- Lavalink -----
# Local development:  LAVALINK_HOST=localhost
# Docker production:  LAVALINK_HOST=lavalink
LAVALINK_HOST=lavalink
LAVALINK_PORT=2333
LAVALINK_SERVER_PASSWORD=youshallnotpass
LAVALINK_SECURE=false

# ----- Spotify API (https://developer.spotify.com/dashboard) -----
LAVASRC_SPOTIFY_CLIENT_ID=your_spotify_client_id
LAVASRC_SPOTIFY_CLIENT_SECRET=your_spotify_client_secret

# ----- Apple Music (https://developer.apple.com) -----
LAVASRC_APPLEMUSIC_MEDIA_API_TOKEN=your_apple_music_api_token

# ----- Deezer -----
LAVASRC_DEEZER_MASTER_DECRYPTION_KEY=your_deezer_master_decryption_key
LAVASRC_DEEZER_ARL=your_deezer_arl_cookie

# ----- Discord Bots -----
NUMBER_OF_BOTS=
BOT_1_CLIENT_ID=
BOT_1_DISCORD_TOKEN=
BOT_2_CLIENT_ID=
BOT_2_DISCORD_TOKEN=
BOT_3_CLIENT_ID=
BOT_3_DISCORD_TOKEN=
BOT_4_CLIENT_ID=
BOT_4_DISCORD_TOKEN=
BOT_5_CLIENT_ID=
BOT_5_DISCORD_TOKEN=
BOT_6_CLIENT_ID=
BOT_6_DISCORD_TOKEN=

# ----- Bot Settings -----
DEFAULT_PREFIX=m